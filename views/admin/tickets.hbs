<div class="container" style=" margin-top: -15px" ;>
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span style="color: aliceblue;">¡Hola {{persona}}!</span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar Sesión <i
                        class="fas fa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-7" style="margin-top:0;">
        <h2 style="color: aliceblue; margin-left: 300px;">Proximas Fechas</h2>
    </div>

    <div class="col-5 text-right">
        <a href="/admin/tickets/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Agregar</a>
    </div>

    <div class="row" style="width: 90%; text-align:center; margin:auto;">
        <div class="col">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Lugar</th>
                        <th scope="col">Direccion</th>
                        <th scope="col">Link</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each tickets}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{Fecha}}</td>
                        <td>{{Lugar}}</td>
                        <td>{{Direccion}}</td>
                        <td>{{link}}</td>
                        <td>
                            <a href="/admin/tickets/modificar/{{id}}" class="btn btn-secondary"><i
                                    class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/tickets/eliminar/{{id}}" class="btn btn-secondary"><i
                                    class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>


            </table>




        </div>
    </div>
</div>